---
layout: null
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Posts -->
  {% for post in site.posts %}
    {% unless post.published == false %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      {% if post.date %}
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
    {% endunless %}
  {% endfor %}

  <!-- Pages -->
  {% assign pages = site.pages | where_exp: "item", "item.sitemap != false" %}
  {% for page in pages %}
    {% assign sitemap_lastmod = page.sitemap.lastmod | default: page.date %}
    {% unless page.sitemap == false or page.name contains '.xml' or page.name contains '.txt' or page.name contains '.json' %}
    <url>
      <loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
      {% if sitemap_lastmod %}
      <lastmod>{{ sitemap_lastmod | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>{% if page.sitemap.changefreq %}{{ page.sitemap.changefreq }}{% else %}monthly{% endif %}</changefreq>
      <priority>{% if page.sitemap.priority %}{{ page.sitemap.priority }}{% else %}0.6{% endif %}</priority>
    </url>
    {% endunless %}
  {% endfor %}

  <!-- Categories -->
  {% for category in site.categories %}
  <url>
    <loc>{{ site.url }}/categories/{{ category[0] | slugify }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}

  <!-- Tags -->
  {% for tag in site.tags %}
  <url>
    <loc>{{ site.url }}/tags/{{ tag[0] | slugify }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endfor %}
</urlset>