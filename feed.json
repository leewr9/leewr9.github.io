---
layout: null
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": {{ site.title | jsonify }},
  "home_page_url": {{ site.url | jsonify }},
  "feed_url": {{ site.url | append: "/feed.json" | jsonify }},
  "description": {{ site.description | jsonify }},
  "language": "ko-KR",
  "authors": [
    {
      "name": {{ site.author.name | jsonify }},
      "url": {{ site.url | jsonify }}{% if site.author.email %},
      "avatar": "https://www.gravatar.com/avatar/{{ site.author.email | downcase | md5 }}?s=512"{% endif %}
    }
  ],
  "items": [
    {% for post in site.posts limit:20 %}
      {% unless post.published == false %}
      {
        "id": {{ site.url | append: post.url | jsonify }},
        "url": {{ site.url | append: post.url | jsonify }},
        "title": {{ post.title | jsonify }},
        "content_html": {{ post.content | jsonify }},
        "summary": {% if post.excerpt %}{{ post.excerpt | strip_html | jsonify }}{% else %}{{ post.content | truncatewords: 50 | strip_html | jsonify }}{% endif %},
        "date_published": {{ post.date | date_to_xmlschema | jsonify }},
        "date_modified": {{ post.date | date_to_xmlschema | jsonify }},
        {% if post.author %}"authors": [{"name": {{ post.author | jsonify }}}],{% endif %}
        "tags": [{% for tag in post.tags %}{{ tag | jsonify }}{% unless forloop.last %},{% endunless %}{% endfor %}]
      }{% unless forloop.last %},{% endunless %}
      {% endunless %}
    {% endfor %}
  ]
}